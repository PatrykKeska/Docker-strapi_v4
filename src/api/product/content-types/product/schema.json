{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productName": {
      "type": "string",
      "required": true
    },
    "productDescription": {
      "type": "text",
      "required": true
    },
    "productCoverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "productGallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "productStock": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "productRating": {
      "type": "decimal"
    },
    "productPrice": {
      "type": "float"
    },
    "uuid": {
      "type": "customField",
      "customField": "plugin::field-uuid.uuid"
    }
  }
}
